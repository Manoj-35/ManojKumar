import java.util.*;
class main{
    public static void main (String []args){
        System.out.print("Input:");
        Scanner obj=new Scanner(System.in);
        int rows=obj.nextInt();
        int num=1;
        System.out.println("Output:");
        for(int i=1;i<=rows;i++){
        for(int j=1;j<=i;j++){
            System.out.print(num+" ");
            num++;
        }    
        System.out.println();
        }
    }
}
